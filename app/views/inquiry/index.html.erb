<div class="inquiry-form">
  <%= form_for @inquiry, :url => confirm_inquiry_index_path do |f| %>
    <%= image_tag 'mountain_header.jpg', class: "header_img" %>
    <section class="page_ttl pt-60">
      <h1 class="center-title gfont">CONTACT</h1>
      <p class="sub_ttl text-center">お問い合わせ</p>
    </section>

  <div class="container">

        <% if @inquiry.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <table class="table">
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class: "form-control", rows: "3" %></td>
          </tr>
        </table>
        <%= f.submit '確認', class: 'btn btn-primary mx-auto d-block' %>
    <% end %>
  </div>
</div>
