<div class="inquiry-form">
  <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
      <h1 class="center-title">お問い合わせ</h1>

      <% if @inquiry.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @inquiry.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <table class="table">
        <tr>
          <th>名前<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>メールアドレス<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :email, class: "form-control" %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= f.text_area :message, class: "form-control", rows: "3" %></td>
        </tr>
      </table>
      <%= f.submit '確認', class: 'btn btn-primary btn-lg btn-block' %>
  <% end %>
</div>
